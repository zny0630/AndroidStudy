<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.activity.ProtectPasswordActivity"
    android:background="#ffc700"
    android:orientation="vertical">
    <include layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="个人头像"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/image_login" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="用户名"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/yonghuming"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2" />
    <LinearLayout
        android:id="@+id/rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="昵称"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/nicheng"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
           />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2" />
    <LinearLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="性别"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
           />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2" />
        <LinearLayout
            android:id="@+id/rl_signature"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="签名"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/qianming"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
          />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#f2f2f2" />

    </LinearLayout>










