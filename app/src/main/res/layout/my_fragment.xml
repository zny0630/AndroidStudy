<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_picture"
            android:src="@drawable/picture_f"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:layout_width="120sp"
            android:layout_height="120sp"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/click_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="点击登录"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/history_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/timer"
                android:background="@drawable/border1_text"
                android:text="播放记录"
                android:textColor="#8a8a8a"
                android:textSize="20sp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:drawablePadding="25sp"
                android:paddingRight="35sp"
                android:paddingLeft="35sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/setting_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/interface_setting_line"
                android:background="@drawable/border1_text"
                android:text="设置"
                android:textColor="#8a8a8a"
                android:textSize="20sp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:drawablePadding="25sp"
                android:paddingRight="35sp"
                android:paddingLeft="35sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>